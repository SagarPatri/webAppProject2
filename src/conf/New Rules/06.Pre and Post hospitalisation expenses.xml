<?xml version="1.0" encoding="iso-8859-1"?>
    <clause id="" name="Pre and Post hospitalization expenses" allowed="NO" type="rule" execution="CLA">
      <coverage id="" name="Pre-hospitalization charges" allowed="~" module="P" clpercentage="" selected="" autoselect="Check_BillType('PRE')">
		<display id="" target="allowed,1" prelabel=""  control="radiogroup" type="single" default="3" optText="Pay,Don't Pay,Pay Conditionally" altText="Pay,Don't Pay,Pay Conditionally" optVal="1,2,3" postlabel="" jscall="onclick=showHideCondition(this)" />
        <condition id="" field="request.prehospitalizationperiod" op="LE" opType="numeric" value="~" clfactor="10" mandatory="NO" method="get_request_prehosp_period('~')" source="PACKAGE" module="P" fieldData="" unit="" result="">
          <display id="" target="value,1" prelabel="Allowed for a period" control="input" type="text" default="" jscall="onkeyup=isNumeric(this)" />
          <display id="" target="method,1;unit,1" prelabel=""  control="select" type="single" default="" optText="days,months,years" altText="days,months,years" optVal="DD,MM,YY" postlabel="" jscall="" />
        </condition>
        <condition id="" field="request.prehospitalizationamount" op="LE" opType="numeric" value="" dynValue="get_minimum(~,~,'~')" clfactor="10"	mandatory="NO" method="REQUEST.PRE_HOSPITALISATION_AMOUNT" source="TABLE" module="P" fieldData="" unit="" result="">
          <display id="" target="dynValue,1" prelabel="Pre-hospitalization charges (Rs)" control="input" type="text" default="" postlabel="Fixed Amount" jscall="onkeyup=isNumeric(this)" />
          <display id="" target="dynValue,2" prelabel="OR"  control="input" type="text" default="" postlabel="" jscall="onkeyup=isNumeric(this)" />
          <display id="" target="dynValue,3" prelabel="% of"  control="select" type="single" default="" optText="SI,Bonus,SI+Bonus,Reqd Amt" altText="SI,Bonus,SI+Bonus,Reqd Amt" optVal="SA,CB,SB,RA" postlabel="" jscall="" />
        </condition>
        <text id="" mandatory="YES" value="" dynValue="get_bill_exclude_date('PRE','ID')"/>
        <action id="" name="ruleengineaction" />
      </coverage>
      <coverage id="" name="Post-hospitalization charges" allowed="~" module="P" clpercentage="" selected="" autoselect="Check_BillType('POST')">
